<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.uniquindio.edu.co.poo.parcial2.controller.FormularioInmuebleController"
      styleClass="vbox">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Registrar nuevo inmueble" styleClass="title2"/>

    <VBox spacing="10">

        <GridPane hgap="10" vgap="10">

            <Label text="Tipo" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtTipo" promptText="Casa, Apartamento, Finca, Local"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Ciudad" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtCiudad" promptText="Ingrese la ciudad"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Habitaciones" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtHabitaciones" promptText="Número de habitaciones"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Pisos" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtPisos" promptText="Número de pisos"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Precio" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="txtPrecio" promptText="Ingrese el precio"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardarInmueble"/>
            <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"/>
        </HBox>

    </VBox>
</VBox>
