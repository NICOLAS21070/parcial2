<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="contenedorPrincipal"
      spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.uniquindio.edu.co.poo.parcial2.controller.DashboardController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Listado de inmuebles" styleClass="title2">
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>
    </Label>

    <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTipo" prefWidth="120" text="Tipo" />
            <TableColumn fx:id="colCiudad" prefWidth="160" text="Ciudad" />
            <TableColumn fx:id="colHabitaciones" prefWidth="150" text="Habitaciones" />
            <TableColumn fx:id="colPisos" prefWidth="120" text="Pisos" />
            <TableColumn fx:id="colPrecio" prefWidth="160" text="Precio" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>
        <Button fx:id="btnAgregar" text="Agregar inmueble" onAction="#onAgregarInmueble" />
        <Button fx:id="btnEliminar" text="Eliminar inmueble" onAction="#onEliminarInmueble" />
    </HBox>

</VBox>
