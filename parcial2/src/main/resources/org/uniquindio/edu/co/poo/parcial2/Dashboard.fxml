<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="contenedorPrincipal"
      spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.uniquindio.edu.co.poo.parcial2.controller.DashboardController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título -->
    <Label text="Dashboard de Inmuebles"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Tabla -->
    <Label text="Lista de Inmuebles:"/>
    <TableView fx:id="tablaInmuebles" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTipo" prefWidth="120" text="Tipo"/>
            <TableColumn fx:id="colCiudad" prefWidth="200" text="Dirección"/> <!-- visualmente "Dirección" -->
            <TableColumn fx:id="colPisos" prefWidth="100" text="Pisos"/>
            <TableColumn fx:id="colHabitaciones" prefWidth="130" text="Habitaciones"/>
            <TableColumn fx:id="colPrecio" prefWidth="120" text="Precio"/>
        </columns>
    </TableView>

    <!-- Formulario para agregar -->
    <GridPane hgap="10" vgap="10">
        <VBox.margin>
            <Insets top="15"/>
        </VBox.margin>

        <Label text="Tipo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTipo" promptText="Ej: Casa"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCiudad" promptText="Ej: Calle 123 #45-67"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Pisos:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPisos" promptText="Ej: 2"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Habitaciones:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtHabitaciones" promptText="Ej: 4"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Precio:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPrecio" promptText="Ej: 250000000"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <HBox spacing="10" alignment="CENTER_RIGHT"
              GridPane.rowIndex="5">
            <Button fx:id="btnAgregar" text="Agregar inmueble" onAction="#onAgregarInmueble"/>
            <Button fx:id="btnEliminar" text="Eliminar inmueble" onAction="#onEliminarInmueble"/>
        </HBox>
    </GridPane>

</VBox>
